generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model JobOffer {
  id                 String   @id @default(uuid())
  titleJob           String
  employer           String
  linkProfileEmployer String
  location           String
  howLongAgo         String
  recruiter          String?
  profileRecruiter   String?
  descriptionOffer   String
  linkOffer          String
  createdAt          DateTime @default(now())
}